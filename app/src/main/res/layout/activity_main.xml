<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="aprivate.wificonnect.MainActivity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:text="Lukasz Grzelak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:text="Adam Sprada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintVertical_bias="0.795" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:text="Marita Michalkiewicz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintVertical_bias="0.895" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="229dp"
        android:layout_height="57dp"
        android:onClick="onClickBtnScan"
        android:text="Scan QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintVertical_bias="0.295" />


    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="229dp"
        android:layout_height="57dp"
        android:onClick="onClickBtnGenerate"
        android:text="Generate QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintVertical_bias="0.095" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-8210578461491658/3928534476">
    </com.google.android.gms.ads.AdView>

</android.support.constraint.ConstraintLayout>
